@import '/lib/weui.wxss';

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

.usermotto {
    margin-top: 200px;
}

/* =====================一篇文章================================= */

.cate {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 20rpx;
}
.content {
    display: flex;
    border-top: 1px solid lightgray;
    margin-bottom: 20rpx;
    flex-direction: column;
}
.title {
    color: black;
    font-size: 35rpx;
}
.details {
    color: gainsboro;
    font-size: 28rpx;
}
